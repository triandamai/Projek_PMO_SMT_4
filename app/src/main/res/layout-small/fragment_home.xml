<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".halaman_fragment.fragment_home">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">
       <GridLayout

           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_marginStart="10dp"
           android:layout_marginEnd="10dp"
           android:rowCount="4"
           android:columnCount="2"

           >
           <android.support.v7.widget.CardView
               android:id="@+id/cv_design"
               android:layout_width="180dp"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_margin="6dp"
               app:cardCornerRadius="5dp"

               android:layout_marginTop="10dp">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@drawable/bg_gradientbiru"
                   android:orientation="vertical">

                   <FrameLayout
                       android:id="@+id/fl_ibuku_pare"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center">

                       <ImageView
                           android:layout_gravity="center"
                           android:id="@+id/iv_buku_cov"
                           android:layout_marginTop="10dp"
                           android:layout_marginBottom="10dp"
                           android:layout_width="100dp"
                           android:layout_height="100dp"
                           android:scaleType="fitCenter"
                           android:src="@drawable/sports"
                           />
                   </FrameLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="20dp"
                       android:layout_marginRight="20dp"
                       android:layout_marginBottom="13dp"
                       android:layout_marginTop="20dp"
                       android:orientation="vertical">

                       <customfonts.MyTextView_Roboto_Regular
                           android:id="@+id/tv_buku_jud"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:textAlignment="center"
                           android:layout_centerInParent="true"
                           android:text="@string/seni_olahraga"
                           android:textColor="#ffffff"
                           android:textSize="14dp" />

                   </LinearLayout>

               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@drawable/bg_gradientbiru"
                   android:orientation="vertical">

                   <FrameLayout
                       android:id="@+id/fl_ibuku_par"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center">

                       <ImageView
                           android:layout_gravity="center"
                           android:id="@+id/iv_buku_co"
                           android:layout_marginTop="10dp"
                           android:layout_marginBottom="10dp"
                           android:layout_width="100dp"
                           android:layout_height="100dp"
                           android:scaleType="fitCenter"
                           android:src="@drawable/sketch"
                           />
                   </FrameLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="20dp"
                       android:layout_marginRight="20dp"
                       android:layout_marginBottom="13dp"
                       android:layout_marginTop="20dp"
                       android:orientation="vertical">

                       <customfonts.MyTextView_Roboto_Regular
                           android:id="@+id/tv_buku_ju"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:textAlignment="center"
                           android:layout_centerInParent="true"
                           android:text="Design"
                           android:textColor="#ffffff"
                           android:textSize="18dp" />

                   </LinearLayout>

               </LinearLayout>
           </android.support.v7.widget.CardView>
           <android.support.v7.widget.CardView

               android:id="@+id/cv_sosmed"
               android:layout_width="180dp"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_margin="6dp"
               app:cardCornerRadius="5dp"

               android:layout_marginTop="10dp">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@drawable/bg_gradientkuning"
                   android:orientation="vertical">

                   <FrameLayout
                       android:id="@+id/fl_ibuku_p"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center">

                       <ImageView
                           android:layout_gravity="center"
                           android:id="@+id/iv_buku_"
                           android:layout_marginTop="10dp"
                           android:layout_marginBottom="10dp"
                           android:layout_width="100dp"
                           android:layout_height="100dp"
                           android:scaleType="fitCenter"
                           android:src="@drawable/socialmedia"
                           />
                   </FrameLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="20dp"
                       android:layout_marginRight="20dp"
                       android:layout_marginBottom="13dp"
                       android:layout_marginTop="20dp"
                       android:orientation="vertical">

                       <customfonts.MyTextView_Roboto_Regular

                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:textAlignment="center"
                           android:layout_centerInParent="true"
                           android:text="Sosial Media"
                           android:textColor="#ffffff"
                           android:textSize="18dp" />



                   </LinearLayout>




               </LinearLayout>
           </android.support.v7.widget.CardView>
           <android.support.v7.widget.CardView

               android:id="@+id/cv_fashion"
               android:layout_width="180dp"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_margin="6dp"
               app:cardCornerRadius="5dp"

               android:layout_marginTop="10dp">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@drawable/bg_gradientpink"
                   android:orientation="vertical">

                   <FrameLayout
                       android:id="@+id/fl_ibuku_pa"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center">

                       <ImageView
                           android:layout_gravity="center"
                           android:id="@+id/iv_buku"
                           android:layout_marginTop="10dp"
                           android:layout_marginBottom="10dp"
                           android:layout_width="100dp"
                           android:layout_height="100dp"
                           android:scaleType="fitCenter"
                           android:src="@drawable/dress"
                           />
                   </FrameLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="20dp"
                       android:layout_marginRight="20dp"
                       android:layout_marginBottom="13dp"
                       android:layout_marginTop="20dp"
                       android:orientation="vertical">

                       <customfonts.MyTextView_Roboto_Regular

                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:textAlignment="center"
                           android:layout_centerInParent="true"
                           android:text="Fashion"
                           android:textColor="#ffffff"
                           android:textSize="18dp" />

                   </LinearLayout>


               </LinearLayout>
           </android.support.v7.widget.CardView>
           <android.support.v7.widget.CardView
               android:id="@+id/cv_bisnis"
               android:layout_width="180dp"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_margin="6dp"
               app:cardCornerRadius="5dp"

               android:layout_marginTop="10dp">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@drawable/bg_gradientbiru"
                   android:orientation="vertical">

                   <FrameLayout
                       android:id="@+id/fl_ibuku_paren"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center">

                       <ImageView
                           android:layout_gravity="center"
                           android:id="@+id/iv_buku_cove"
                           android:layout_marginTop="10dp"
                           android:layout_marginBottom="10dp"
                           android:layout_width="100dp"
                           android:layout_height="100dp"
                           android:scaleType="fitCenter"
                           android:src="@drawable/sports"
                           />
                   </FrameLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="20dp"
                       android:layout_marginRight="20dp"
                       android:layout_marginBottom="13dp"
                       android:layout_marginTop="20dp"
                       android:orientation="vertical">

                       <customfonts.MyTextView_Roboto_Regular
                           android:id="@+id/tv_buku_judul"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:textAlignment="center"
                           android:layout_centerInParent="true"
                           android:text="@string/seni_olahraga"
                           android:textColor="#ffffff"
                           android:textSize="14dp" />

                   </LinearLayout>

               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@drawable/bg_gradienthijau"
                   android:orientation="vertical">

                   <FrameLayout
                       android:id="@+id/fl_ibuku_parent"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center">

                       <ImageView
                           android:layout_gravity="center"
                           android:id="@+id/iv_buku_cover"
                           android:layout_marginTop="10dp"
                           android:layout_marginBottom="10dp"
                           android:layout_width="100dp"
                           android:layout_height="100dp"
                           android:scaleType="fitCenter"
                           android:src="@drawable/businessman"
                           />
                   </FrameLayout>

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="20dp"
                       android:layout_marginRight="20dp"
                       android:layout_marginBottom="13dp"
                       android:layout_marginTop="20dp"
                       android:orientation="vertical">

                       <customfonts.MyTextView_Roboto_Regular
                           android:id="@+id/tv_buku_judu"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:textAlignment="center"
                           android:layout_centerInParent="true"
                           android:text="Bisnis"
                           android:textColor="#ffffff"
                           android:textSize="18dp" />

                   </LinearLayout>

               </LinearLayout>
           </android.support.v7.widget.CardView>


       </GridLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>