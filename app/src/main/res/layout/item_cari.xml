<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="4dp"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/fl_item_cari_parent"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginTop="1dp"
        android:background="@color/transparan">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_gradientkuning" />
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cv_pkoleksi_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="80dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">

                        <customfonts.MyTextView_Roboto_Medium
                            android:id="@+id/tv_item_cari_judul"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Comming Soon"
                            android:textColor="#606674"
                            android:textSize="14dp" />

                        <customfonts.MyTextView_Roboto_Medium
                            android:id="@+id/tv_item_cari_penerbit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Comming Soon"
                            android:textColor="@color/blue"
                            android:textSize="13dp" />


                    </LinearLayout>


                </LinearLayout>




            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <FrameLayout
                android:id="@+id/fl_item_news_parent"
                android:layout_width="70dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_item_cari_cover"
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@color/placeholder"
                    android:layout_height="100dp"/>


            </FrameLayout>
        </android.support.v7.widget.CardView>
    </FrameLayout>


</LinearLayout>