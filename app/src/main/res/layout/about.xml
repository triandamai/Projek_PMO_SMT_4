<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:paddingTop="40dp"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradientnews"
    >


    <TextView
        android:id="@+id/textView5"
        android:layout_width="93dp"
        android:layout_height="36dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="My E-Book"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
         />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="132dp"
        android:layout_height="93dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_logo"
         />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="147dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Contact person : Desi "
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="169dp"
        android:layout_height="42dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:inputType="phone"
        android:text="(+62) 82265009155"
        />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="86dp"
        android:layout_height="28dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Version 1.0"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
         />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="214dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="Desiputri875@gmail.com"
        />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="301dp"
        android:layout_height="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Bagi Anda yang ingin upload e-book karya Anda sendiri di aplikasi My E-Book ini, silahkan hubungi kontak person di atas."
         />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="273dp"
        android:layout_height="29dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="https://www.noobdev.biz/index.php/admin"
        android:textAppearance="@style/TextAppearance.AppCompat"
         />

</LinearLayout>

